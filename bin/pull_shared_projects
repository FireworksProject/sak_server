#!/bin/bash

fail () {
	echo "$@" >&2
	exit 1
}

ensure_dir () {
    if ! [ -d "$1" ]; then
        mkdir -p -- "$1" || fail "couldn't create $1"
    fi
}

rsync_append () {
    local src="$1"
    local dest="$2"
    local logfile="$3"

    if [ -z "$logfile" ]; then
        fail "$0: logfile is a required argument"
    fi

    rsync \
        --recursive \
        --links \
        --perms \
        --times \
        --owner \
        --progress \
        --human-readable \
        --log-file="$logfile" \
        -e 'ssh -p 2575' \
        "$src/" "$dest/" || fail "$0: rsync failed"
}

logdir="$HOME/.saklogs"
ensure_dir "$logdir"
logfile="$logdir/pull.log"

src="fwpusers@saks.fireworksproject.com:~/shared_projects"
dest="$( pwd )"

rsync_append "$src" "$dest" "$logfile"
